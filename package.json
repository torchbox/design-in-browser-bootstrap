{
  "name": "DIBB",
  "version": "2.0.0",
  "author": "Torchbox Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchbox/design-in-browser-bootstrap/"
  },
  "sasslintConfig": ".sass-lint.yml",
  "config" : {
    "src_html"      : "site/templates",
    "src_js"        : "site/javascript",
    "src_css"       : "site/sass",
    "src_img"       : "site/images",
    "dest_html"     : "patternlab/source/_patterns",
    "dest_js"       : "dist/js",
    "dest_css"      : "dist/css",
    "dest_img"      : "dist/images"
  },
  "scripts": {
    "deploy": "dploy",
    "//clean": "rm -rf $npm_package_config_dest_html/{*.html,js/**,css/**,img/**}",
    "//autoprefixer": "postcss -u autoprefixer -r $npm_package_config_dest_css/*.css",
    "//postautoprefixer": "browser-sync reload --files='*.css'",
    "scss": "node-sass --output-style compressed -o $npm_package_config_dest_css $npm_package_config_src_css",
    "postscss": "browser-sync reload --files='*.css'",
    "serve": "browser-sync start --config browsersync.config.js",
    "git:init": "rm -rf .git && git init && git add . && git commit -m 'Project start'",
    "lint:js": "eslint $npm_package_config_src_js --ignore-pattern **/vendor/**/*.js || true",
    "lint:css": "sass-lint $npm_package_config_src_css**/*.scss -v -q || true",
    "lint": "npm-run-all -p lint:js lint:css",
    "//sync:js":"rsync -rtvu --delete $npm_package_config_src_js/ $npm_package_config_dest_js/",
    "//postsync:js": "browser-sync reload",
    "sync:html":"rsync -rtvu --delete $npm_package_config_src_html/ $npm_package_config_dest_html/",
    "postsync:html": "npm run lab:build && browser-sync reload",
    "sync:img":"rsync -rtvu --delete $npm_package_config_src_img/ $npm_package_config_dest_img/",
    "postsync:img": "browser-sync reload",
    "sync": "npm-run-all -p sync:html sync:img",
    "build:js": "rollup -c",
    "postbuild:js": "browser-sync reload",
    "build:css": "npm run scss",
    "build": "npm-run-all -p lint sync:html sync:img build:js build:css && npm run lab:build",
    "watch:html": "onchange $npm_package_config_src_html/**/** -- npm run sync:html",
    "watch:img": "onchange $npm_package_config_src_img/** -- npm run sync:img",
    "watch:js": "onchange $npm_package_config_src_js/** -- npm-run-all -p lint:js build:js",
    "watch:css": "onchange $npm_package_config_src_css -- npm-run-all -p build:css",
    "watch": "npm-run-all -p watch:html watch:img watch:js watch:css",
    "lab:build": "cd patternlab && php core/console --generate",
    "lab:watch": "cd patternlab && php core/console --watch",
    "lab": "npm-run-all -p serve lab:watch watch build:css build:js",
    "dev": "npm run sync && npm run lab",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "^6.1.2",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.13.0",
    "dploy": "^1.2.0",
    "eslint": "^3.2.2",
    "left-pad": "^1.1.3",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.34.8",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^6.0.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "sass-lint": "^1.8.2"
  },
  "engines": {
    "node": ">=4 <6"
  }
}
